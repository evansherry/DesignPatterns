<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evan.designpatterns.activitys.MainActivity">

    <Button
        android:id="@+id/chapter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Chapter1"
        android:onClick="chapter1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/chapter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Chapter2"
        android:onClick="chapter2"
        app:layout_constraintLeft_toLeftOf="@+id/chapter1"
        app:layout_constraintTop_toBottomOf="@+id/chapter1"/>
    <Button
        android:id="@+id/chapter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Chapter3"
        android:onClick="chapter3"
        app:layout_constraintLeft_toLeftOf="@+id/chapter2"
        app:layout_constraintTop_toBottomOf="@+id/chapter2"/>

</android.support.constraint.ConstraintLayout>
